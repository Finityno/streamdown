{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["es2020"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "noEmit": true,
    "declaration": true,
    "declarationMap": true
  },
  "include": ["index.tsx", "lib/**/*.ts", "lib/**/*.tsx"],
  "exclude": ["node_modules", "build", "dist", "__tests__", "**/*.test.ts", "**/*.test.tsx"]
}
